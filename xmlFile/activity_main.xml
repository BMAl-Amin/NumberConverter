<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#e9e2fa"
        android:orientation="vertical">
        <EditText
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:background="#00042e"
            android:fontFamily="casual"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:cursorVisible="false"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="From"
                android:padding="6dp"
                android:background="#00042e"
                android:fontFamily="sans-serif"
                android:textColor="#ffffff"
                android:textSize="18sp"/>
            <Spinner
                android:id="@+id/cwspnr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="6dp"
                android:background="#beb0ff"
                android:fontFamily="casual"
                android:textColor="#ffffff"
                android:entries="@array/system_type"
                android:prompt="@string/system_name" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="To"
                android:padding="6dp"
                android:background="#00042e"
                android:fontFamily="sans-serif"
                android:textColor="#ffffff"
                android:textSize="18sp"/>
            <Spinner
                android:id="@+id/ctspnr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:background="#beb0ff"
                android:entries="@array/system_type"
                android:prompt="@string/system_name"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="#00042e"
            android:fontFamily="casual"
            android:textColor="#ffffff"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="148dp"
            android:gravity="center"
            android:background="#030625">

            <Button
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:background="#00042e"
                android:fontFamily="sans-serif"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_toEndOf="@+id/one"
                android:layout_toRightOf="@+id/one"
                android:background="#00042e"
                android:fontFamily="sans-serif"
                android:text="2"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_toEndOf="@+id/two"
                android:layout_toRightOf="@+id/two"
                android:background="#00042e"
                android:fontFamily="sans-serif"
                android:text="3"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/three"
                android:layout_toRightOf="@+id/three"
                android:background="#00042e"
                android:fontFamily="sans-serif"
                android:text="4"
                android:textColor="#ffffff"

                android:textSize="20sp"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/one"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:background="#00042e"
                android:fontFamily="sans-serif"
                android:text="5"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/two"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/five"
                android:layout_toRightOf="@+id/five"
                android:background="#00042e"
                android:fontFamily="sans-serif"
                android:text="6"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/seven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/three"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/six"
                android:layout_toRightOf="@+id/six"
                android:background="#00042e"
                android:fontFamily="sans-serif"
                android:text="7"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/eight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/four"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/seven"
                android:layout_toRightOf="@+id/seven"
                android:background="#00042e"
                android:fontFamily="sans-serif"
                android:text="8"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/nine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:background="#00042e"
                android:fontFamily="sans-serif"
                android:text="9"
                android:layout_toEndOf="@+id/bspace"
                android:layout_toRightOf="@+id/bspace"
                android:layout_below="@+id/six"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/zero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/nine"
                android:layout_toRightOf="@+id/nine"
                android:background="#00042e"
                android:fontFamily="sans-serif"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/bspace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="2dp"
                android:background="#00042e"
                android:fontFamily="sans-serif"
                android:text="back\nspace"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/btnconvert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Convert"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:textColor="#efed59"
                android:background="#20266c"
                android:layout_toEndOf="@+id/zero"
                android:layout_toRightOf="@+id/zero"
                android:layout_below="@+id/eight"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="For graphical animation"/>
</LinearLayout>